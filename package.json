{
  "version": "0.0.0-development",
  "name": "@greenlight/docker",
  "description": "Greenlight Docker Manager",
  "author": "Ahmad Nassri <ahmad@ahmadnassri.com> (https://www.ahmadnassri.com/)",
  "homepage": "https://greenlight.ci/",
  "repository": {
    "type": "git",
    "url": "https://github.com/greenlight/docker.git"
  },
  "license": "ISC",
  "main": "index.js",
  "keywords": [
    "greenlight"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "lib"
  ],
  "bugs": {
    "url": "https://github.com/greenlight/docker/issues"
  },
  "scripts": {
    "build": "npm run build:valid && npm run build:invalid",
    "build:valid": "docker build -t greenlight/valid test/fixtures/plugins/valid",
    "build:invalid": "docker build -t greenlight/invalid test/fixtures/plugins/invalid",
    "pretest": "npm run build",
    "test": "npm run test:tap",
    "test:tap": "tap test/*.js --100 --coverage-report=lcov --no-browser",
    "coverage": "opener coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "tap": "^11.1.3"
  },
  "dependencies": {
    "@ahmadnassri/spawn-promise": "^1.1.2",
    "@greenlight/schema-plugin": "^1.2.0",
    "@greenlight/schema-report": "^1.2.0",
    "ajv": "^6.4.0",
    "make-dir": "^1.2.0",
    "smart-promise": "^2.0.0"
  }
}
